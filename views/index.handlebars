<h1> Burgers</h1>
<ul>
    {{#each burgers}}
    {{#unless eaten}}
    {{>eaten/burgers-eaten eaten=true}}
    {{/unless}}
    {{/each}}
</ul>

<div class="col-xs-1-12">
    
</div>
<h2> Uneaten burgers</h2>

<ul>
    {{#each burger}}
    {{#if eaten}}
    {{>eaten/burgers-eaten eaten=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add burger</h2>
<form id="create-form">

    <div class="form-group">
        <label for="burger">Burger Name: </label>
        <input type="text" id="burger" name="name">
    </div>
    <button type="submit">Add Burger</button>
</form>